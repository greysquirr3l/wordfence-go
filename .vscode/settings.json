  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Go Keywords",
        "scope": [
          "keyword.control.go",
          "keyword.function.go",
          "keyword.import.go",
          "keyword.package.go",
          "keyword.var.go",
          "keyword.const.go",
          "keyword.type.go"
        ],
        "settings": {
          "foreground": "#00a6d6",
          "fontStyle": "bold"
        }
      },
      {
        "name": "Go Types",
        "scope": ["entity.name.type.go", "support.type.go"],
        "settings": {
          "foreground": "#00d2d3",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Go Functions",
        "scope": ["entity.name.function.go", "support.function.go"],
        "settings": {
          "foreground": "#7289da",
          "fontStyle": "bold"
        }
      },
      {
        "name": "Go Strings",
        "scope": ["string.quoted.double.go", "string.quoted.single.go", "string.quoted.raw.go"],
        "settings": {
          "foreground": "#43b581"
        }
      },
      {
        "name": "Go Numbers",
        "scope": ["constant.numeric.go"],
        "settings": {
          "foreground": "#faa61a"
        }
      },
      {
        "name": "Go Comments",
        "scope": ["comment.line.double-slash.go", "comment.block.go"],
        "settings": {
          "foreground": "#72767d",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Go Package Names",
        "scope": ["entity.name.package.go"],
        "settings": {
          "foreground": "#00d2d3",
          "fontStyle": "bold"
        }
      },
      {
        "name": "Go Constants",
        "scope": ["constant.other.go", "variable.other.constant.go"],
        "settings": {
          "foreground": "#f04747",
          "fontStyle": "bold"
        }
      },
      {
        "name": "Go Operators",
        "scope": ["keyword.operator.go"],
        "settings": {
          "foreground": "#dcddde"
        }
      },
      {
        "name": "Go Struct Fields",
        "scope": ["variable.other.field.go"],
        "settings": {
          "foreground": "#ffffff"
        }
      },
      {
        "name": "Go Interface Methods",
        "scope": ["entity.name.function.method.go"],
        "settings": {
          "foreground": "#7289da",
          "fontStyle": "italic"
        }
      }
    ]
  },

  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "*.deprecated": {
        "foreground": "#72767d",
        "fontStyle": "strikethrough"
      },
      "function.declaration": {
        "foreground": "#7289da",
        "fontStyle": "bold"
      },
      "method.declaration": {
        "foreground": "#7289da",
        "fontStyle": "bold"
      },
      "type": {
        "foreground": "#00d2d3",
        "fontStyle": "italic"
      },
      "struct": {
        "foreground": "#00d2d3",
        "fontStyle": "bold"
      },
      "interface": {
        "foreground": "#00a6d6",
        "fontStyle": "italic bold"
      },
      "variable.readonly": {
        "foreground": "#f04747",
        "fontStyle": "bold"
      },
      "parameter": {
        "foreground": "#ffffff"
      },
      "property": {
        "foreground": "#ffffff"
      }
    }
  }
}
