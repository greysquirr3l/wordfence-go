{
  "go.goroot": "/opt/homebrew/opt/go/libexec",
  "go.gopath": "/Users/nickcampbell/go",
  "go.toolsGopath": "/Users/nickcampbell/go",
  "go.toolsEnvVars": {
    "GOARCH": "arm64",
    "GOOS": "darwin",
    "GOARM64": "v8.0",
    "GO111MODULE": "on",
    "CGO_ENABLED": "1"
  },
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast", "--timeout=5m"],
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
  "go.buildTags": "integration",
  "go.testOnSave": false,
  "go.coverOnSave": true,
  "go.coverageDecorator": {
    "type": "gutter",
    "coveredHighlightColor": "rgba(64,128,128,0.2)",
    "uncoveredHighlightColor": "rgba(128,64,64,0.2)",
    "coveredGutterStyle": "blockgreen",
    "uncoveredGutterStyle": "blockred"
  },
  "go.vetOnSave": "workspace",
  "go.generateTestsFlags": ["-all", "-exported"],
  "go.useCodeSnippetsOnFunctionSuggest": true,
  "go.inferGopath": false,
  "go.enableCodeLens": {
    "runtest": true
  },
  "go.delveConfig": {
    "dlvLoadConfig": {
      "followPointers": true,
      "maxVariableRecurse": 1,
      "maxStringLen": 100,
      "maxArrayValues": 100,
      "maxStructFields": -1
    }
  },
  "go.toolsManagement.autoUpdate": true,
  "go.testFlags": ["-v", "-race", "-coverprofile=coverage.out", "-timeout=30s"],
  "go.buildFlags": ["-race"],
  "go.installDependenciesWhenBuilding": true,
  "go.vulncheck": "Imports",

  "gopls": {
    "build.buildFlags": ["-tags=integration"]
  },

  "go.goplsOptions": {
    "build.buildFlags": ["-tags=integration"],
    "ui.completion.usePlaceholders": true,
    "ui.completion.experimental.postfixCompletions": true,
    "ui.diagnostic.staticcheck": true,
    "ui.diagnostic.vulncheck": "Imports",
    "ui.codelenses": {
      "gc_details": false,
      "references": true,
      "test": true,
      "tidy": true,
      "upgrade_dependency": true,
      "vendor": true
    },
    "ui.inlayhint.hints": {
      "assignVariableTypes": true,
      "compositeLiteralFields": true,
      "compositeLiteralTypes": true,
      "constantValues": true,
      "functionTypeParameters": true,
      "parameterNames": true,
      "rangeVariableTypes": true
    },
    "analyses": {
      "fieldalignment": true,
      "nilness": true,
      "shadow": true,
      "unusedparams": true,
      "unusedwrite": true
    },
    "staticcheck": true,
    "gofumpt": true
  },

  "[shellscript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    },
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [80, 120],
    "files.trimTrailingWhitespace": true,
    "editor.suggest.showWords": true,
    "editor.wordBasedSuggestions": "currentDocument"
  },

  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.snippetSuggestions": "none",
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.detectIndentation": false,
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.showWords": false,
    "editor.rulers": [80, 120],
    "editor.semanticHighlighting.enabled": true
  },

  // GitHub Copilot Configuration - 2025 Latest Settings
  "github.copilot.enable": {
    "go": true,
    "javascript": true,
    "typescript": true,
    "yaml": true,
    "dockerfile": true,
    "makefile": true,
    "json": true,
    "markdown": true,
    "*": true
  },
  "github.copilot.advanced": {
    "inlineSuggestCount": 3,
    "blockSuggestCount": 5,
    "enableAutoCompletions": true,
    "length": 500,
    "listCount": 10,
    "top_p": 1
  },
  "github.copilot.suggest": {
    "enable": true,
    "showInlineSuggestions": true,
    "showEditorCompletions": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.statusBar.enabled": true,

  // Copilot Chat - Enhanced Configuration
  "github.copilot.chat.enable": true,
  "github.copilot.chat.welcomeMessage": "enabled",
  "github.copilot.chat.transparent": false,
  "github.copilot.conversation.enableAutoSend": false,
  "github.copilot.conversation.showWelcomeMessage": true,

  // Custom Instructions Configuration (2025)
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,

  // Prompt Files Configuration (2025)
  "chat.promptFiles": true,

  // Agent Mode and Autonomous Coding
  "github.copilot.workspace.enable": true,
  "github.copilot.chat.agentMode.enable": true,
  "github.copilot.experimental": {
    "panel": true,
    "agentMode": true,
    "mcpServers": true
  },

  // Language Models and Advanced Features
  "github.copilot.chat.model": "claude-4.0-sonnet",
  "github.copilot.chat.languageModelSelection": "auto",

  // Chat Mode Configuration
  "github.copilot.chat.defaultMode": "agent",
  "github.copilot.chat.modes": {
    "agent": {
      "enabled": true,
      "tools": ["workspace", "terminal", "search"]
    }
  },

  "github.copilot.chat.reviewSelection.instructions": [
    { "text": "Focus on Go best practices, security vulnerabilities, and Clean Architecture compliance." },
    { "text": "Check for proper error handling and resource cleanup." },
    { "text": "Verify adherence to domain-driven design patterns and CQRS implementation." },
    { "text": "Always run shellcheck on any shell scripts created or modified." },
    { "text": "Reference .github/copilot-instructions.md for comprehensive architectural guidance." },
    { "text": "Use tagged prompts: #generate for code creation, #analysis for reviews, #validate for architecture checks." },
    { "text": "Follow security-first repository design patterns from docs/dev/security_first_repository_design.md" }
  ],
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "Use conventional commit format with scope when applicable." },
    { "text": "Reference issue numbers when relevant." },
    { "text": "Follow branch naming guidelines from .github/copilot-instructions.md" },
    { "text": "Use project specific scopes: analysis, git, reporting, auth, cli, api, domain, app, infra, interface, template, docs" },
    { "text": "Consider template-specific changes: use 'template:' scope for template configuration updates" }
  ],

  // Shellcheck integration settings
  "shellcheck.enable": true,
  "shellcheck.enableQuickFix": true,
  "shellcheck.run": "onType",
  "shellcheck.exclude": [],
  "shellcheck.customArgs": ["--external-sources", "--check-sourced"],
  "shellcheck.ignorePatterns": {
    "**/*.zsh": true,
    "**/*.bash_profile": true,
    "**/*.bashrc": true
  },
  "shellcheck.useWorkspaceRootAsCwd": true,

  // Git commit validation settings
  "git.inputValidation": true,
  "git.inputValidationLength": 50,
  "git.inputValidationSubjectLength": 50,
  "git.showCommitInput": true,
  "git.verboseCommit": true,

  "files.associations": {
    "*.go": "go",
    "go.mod": "go",
    "go.sum": "go.sum",
    "*.gotmpl": "gotmpl",
    "*.gohtml": "html",
    "Dockerfile*": "dockerfile",
    "docker-compose*.yml": "dockercompose",
    "docker-compose*.yaml": "dockercompose",
    "*.sh": "shellscript",
    "*.bash": "shellscript",
    "commit-msg": "shellscript",
    "pre-commit": "shellscript",
    "post-commit": "shellscript",
    "pre-push": "shellscript",
    "scripts/*": "shellscript"
  },

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/*.exe": true,
    "**/coverage.out": true,
    "**/coverage.html": true,
    "**/.vscode/settings.json": false
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "**/tmp/**": true
  },

  "sqltools.format": {
    "linesBetweenQueries": 2,
    "reservedWordCase": "upper"
  },

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "go.mod": "go.sum",
    "Dockerfile": "Dockerfile*, .dockerignore, docker-compose*, .docker*",
    "README.md": "README*, LICENSE*, CHANGELOG*, CONTRIBUTING*, SECURITY*",
    "*.go": "${capture}.pb.go, ${capture}_test.go, ${capture}_mock.go"
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.git": true,
    "**/coverage.out": true,
    "**/coverage.html": true,
    "**/tmp": true,
    "**/*.pb.go": true
  },

  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.rulers": [120, 160],
    "files.trimTrailingWhitespace": false
  },

  // Markdown linting configuration
  "markdownlint.config": {
    "MD013": {
      "line_length": 180,
      "code_blocks": false,
      "tables": false
    },
    "MD029": false, // Ordered list item prefix - allow different numbering styles
    "MD010": false, // Hard tabs - allow tabs in code blocks (Makefiles)
    "MD032": false, // Blanks around lists - more flexible list formatting
    "MD036": {
      // No emphasis as heading - allow emphasis for styling
      "punctuation": ".,;:!?"
    }
  },

  // File-specific markdown lint ignores
  "markdownlint.ignore": ["docs/c4_diagramming_guide.md", "docs/battle_tested_libraries.md"],

  "emmet.excludeLanguages": ["go"],

  "security.workspace.trust.enabled": true,
  "security.workspace.trust.startupPrompt": "always",
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.ignoreRecommendations": false,
  "extensions.recommendations": [
    "github.copilot",
    "github.copilot-chat",
    "golang.go",
    "ms-azuretools.vscode-docker",
    "esbenp.prettier-vscode",
    "ms-vscode.test-adapter-converter",
    "humao.rest-client",
    "redhat.vscode-yaml",
    "ms-vscode.makefile-tools",
    "timonwong.shellcheck",
    "foxundermoon.shell-format"
  ],

  "terminal.integrated.env.osx": {
    "GO111MODULE": "on",
    "GOARCH": "arm64",
    "GOOS": "darwin"
    // Note: GitHub authentication is handled through:
    // 1. VS Code's built-in Git credential manager (preferred)
    // 2. GitHub CLI: gh auth login (for terminal operations)
    // 3. Git credential helper configured in ~/.gitconfig
    // Setting tokens as env vars in VS Code settings is not recommended for security
  },

  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/opt/homebrew/bin/bash",
      "args": ["--rcfile", "~/.bashrc_simple"],
      "icon": "terminal-bash"
      // Note: ~/.bashrc_simple includes automatic VS Code shell integration
      // and redirects to full ~/.bashrc when needed
    },
    "PowerShell": {
      "path": "/usr/local/bin/pwsh",
      "icon": "terminal-powershell",
      "color": "terminal.ansiBlue"
      // Note: PowerShell profile includes VS Code shell integration
    },
    "zsh": {
      "path": "zsh",
      "args": ["-c", "source ~/.bashrc_simple 2>/dev/null || true; exec zsh"]
    }
  },

  "terminal.integrated.defaultProfile.osx": "bash",

  // Shell Integration Configuration for VS Code and VS Code Insiders
  // Note: Shell integration is handled automatically by ~/.bashrc and ~/.bashrc_simple
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "both",
  "terminal.integrated.shellIntegration.showCommandGuide": true,
  "terminal.integrated.shellIntegration.history": 100,

  // Advanced shell integration features
  "terminal.integrated.shellIntegration.suggestEnabled": true,

  // Sticky scroll and enhanced terminal features
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "terminal.integrated.suggest.runOnEnter": "never",

  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono', 'Hack Nerd Font Mono', 'SF Mono', 'Monaco', 'Inconsolata', 'Consolas', 'Courier New', monospace",
  "terminal.integrated.fontSize": 10,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.lineHeight": 1.2,

  // Terminal command navigation and accessibility
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.terminal.focusFind",
    "workbench.action.terminal.hideFind",
    "workbench.action.terminal.runRecentCommand",
    "workbench.action.terminal.goToRecentDirectory"
  ],

  // Enhanced terminal experience
  "terminal.integrated.enableMultiLinePasteWarning": "auto",
  "terminal.integrated.rightClickBehavior": "selectWord",
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.tabs.showActions": "singleTerminal",

  // Command execution and navigation
  "terminal.integrated.allowChords": false,
  "terminal.integrated.allowMnemonics": false,
  "terminal.integrated.altClickMovesCursor": true,

  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Hack Nerd Font Mono', 'SF Mono', 'Monaco', 'Inconsolata', 'Consolas', 'Courier New', monospace",
  "editor.fontSize": 11,
  "editor.fontWeight": "normal",
  "editor.lineHeight": 1.4,
  "editor.fontLigatures": true,

  "debug.console.fontSize": 11,
  "debug.console.lineHeight": 22,

  "problems.decorations.enabled": true,
  "problems.sortOrder": "severity",

  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,

  // Go + Pantone Grey Slate Color Theme
  "workbench.colorTheme": "Default Dark Modern",
